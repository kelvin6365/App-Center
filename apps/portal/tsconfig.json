{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["apps/portal/*"],
      "@app-center/shadcn/ui": ["libs/shadcn/ui/src/index.ts"],
      "@app-center/shadcn/ui/*": ["libs/shadcn/ui/src/*"],
      "@app-center/shadcn/util": ["libs/shadcn/util/src/index.ts"],
      "@app-center/shadcn/util/*": ["libs/shadcn/util/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/portal/.next/types/**/*.ts",
    "../../dist/apps/portal/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
